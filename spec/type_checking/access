record Blah1 {
  blah : String
}

record Blah {
  blah : Blah1
}

component Main {
  fun render : String {
    blah =
      { blah = { blah = "Helllo" } }

    blah.blah.blah
  }
}
--------------------------------------------------------------------------------
module String {
  fun greet (name : String) : String {
    "Hello #{name}!"
  }
}

component Main {
  fun render : String {
    "Joe".greet()
  }
}
-----------------------------------------------------------------------TypeError
component Main {
  fun render : Bool {
    blah = ""

    blah.blah.blah
  }
}
-----------------------------------------------------------------------TypeError
