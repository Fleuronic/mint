record Test {
  name : String,
  age : Number
}

component Main {
  fun render : String {
    item: Test("Joe", 32)

    item.name
  }
}
-----------------------------------------------------------------VariableMissing
component Main {
  fun render : String {
    item: Test("Joe")

    item.name
  }
}
--------------------------------------------------------CallArgumentTypeMismatch
record Test {
  name : String,
  age : Number
}

component Main {
  fun render : String {
    item: Test(32, "Joe")

    item.name
  }
}
--------------------------------------------------------CallArgumentSizeMismatch
record Test {
  name : String,
  age : Number
}

component Main {
  fun render : String {
    item: Test(32, "Joe", "Third")

    item.name
  }
}
--------------------------------------------------------------------------------
record User {
  name : String,
  age : Number,
  active : Bool,
}

component Main {
  fun render : String {
    partial:
      User("John Doe", 32)

    partial(true) == {
      name = "John Doe",
      active = true,
      age = 32
    }

    ""
  }
}
