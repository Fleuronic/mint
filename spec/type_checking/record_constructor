component Main {
  fun render : String {
    item: Test("Joe")

    item.name
  }
}
--------------------------------------------------------CallArgumentTypeMismatch
record Test {
  name : String,
  age : Number
}

component Main {
  fun render : String {
    item: Test(32, "Joe")

    item.name
  }
}
--------------------------------------------------------CallArgumentSizeMismatch
